
{% extends "base.html.twig" %}

{% block header %}
    {% include "ciudadano/header.html.twig" %}
{% endblock %}

{% block stylesheets %}
    <style>
        .badge{
            background-color: #E0B831;
            padding: 9px 9px;
        }
        .badge,
        .ejercicio-evaluado{
            font-size: 45px;
        }
        #tab1,
        #tab2,
        #tab3,
        #tab4,
        #tab5{
            font-size: 35px;
        }
        #tab3 h4{
            font-size: 55px;
        }
        #tab3 img{
            width: 120px;
        }
        .ejercicio-calificacion img{
            height: 70px;
        }
        .tarjeta-ejercicio{
            margin-top: 1%;
            padding: 10px 25px;
        }
        .tarjeta-ejercicio .tarjeta-ejercicio-fecha,
        .tarjeta-ejercicio .tarjeta-ejercicio-enunciado,
        .tarjeta-ejercicio .tarjeta-ejercicio-tipo,
        .tarjeta-ejercicio .ejercicio-calificacion{
            border: 2px #000000 solid;
        }
        .tarjeta-ejercicio .tarjeta-ejercicio-tipo{
            border-top-left-radius: 15px;
            border-bottom: 0px;
            border-right: 0px;
        }
        .tarjeta-ejercicio .tarjeta-ejercicio-fecha{
            border-bottom: 0px;
            border-top-right-radius: 15px;
        }
        .tarjeta-ejercicio -tarjeta-ejercicio-evaluacion{
            border-top-width: 0px;
        }
        .tarjeta-ejercicio .ejercicio-calificacion{
            border-bottom-width: 0px;
        }
        .btn-ejercicio{
            border-top-left-radius: 0px;
            border-top-right-radius: 0px;
        }
        .no-elegible{
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }
        .file-upload-indicator {
            display: inline;
            cursor: default;
            opacity: .8;
            width: 60%;
        }
        .file-drop-zone{
            border-top-color: rgb(255, 255, 255);
            border-top-style: dotted;
            border-top-width: 3px;
            border-right-color: rgb(255, 255, 255);
            border-right-style: dotted;
            border-right-width: 3px;
            border-left-color: rgb(255, 255, 255);
            border-left-style: dotted;
            border-left-width: 3px;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
        .file-preview-frame {
            position: relative;
            display: table;
            margin: 8px;
            height: 160px;
            border: 1px solid #ddd;
            box-shadow: 1px 1px 5px 0 #a2958a;
            padding: 6px;
            float: left;
            text-align: center;
            vertical-align: middle;
        }
        .file-preview-image {
            vertical-align: middle;
            image-orientation: from-image;
        }
        .file-preview {
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 5px;
            width: 100%;
            margin-bottom: 5px;
        }
        .close {
            float: right;
            font-size: 21px;
            font-weight: 700;
            line-height: 1;
            color: #000;
            text-shadow: 0 1px 0 #fff;
            filter: alpha(opacity=20);
            opacity: .2;
        }
        .file-thumbnail-footer {
            position: relative;
        }
        .file-footer-caption {
            display: block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 160px;
            text-align: center;
            padding-top: 4px;
            font-size: 11px;
            color: #777;
            margin: 5px auto;
        }
        .file-preview .clickable, .clickable .file-drop-zone-title {
            cursor: pointer;
        }
        .file-drop-zone {
            border: 1px dashed #aaa;
            border-radius: 4px;
            height: 100%;
            text-align: center;
            vertical-align: middle;
            margin: 12px 15px 12px 12px;
            padding: 5px;
        }
        code, kbd, pre, samp {
            font-family: Menlo,Monaco,Consolas,"Courier New",monospace;
        }
        code, kbd, pre, samp {
            font-family: monospace,monospace;
            font-size: 1em;
        }
        .file-thumb-progress .progress, .file-thumb-progress .progress-bar {
            height: 10px;
            font-size: 9px;
            line-height: 10px;
        }
        #img-calificacion{
            height: 140px;
        }
        @media (max-width: 760px){
            #tab1,
            #tab2,
            #tab3,
            #tab4,
            #tab5{
                font-size: 13px;
            }
            #tab3 h4{
                font-size: 20px;
            }
            #tab3 img{
                width: 50px;
            }
            .badge,
            .ejercicio-evaluado{
                font-size: 14px;
            }
            .ejercicio-calificacion img{
                height: 20px;
            }
            .tarjeta-ejercicio{
                font-size: 13px;
                padding: 10px 25px;
            }
            #img-calificacion{
                height: 140px;
            }
            .titulo-xs{
                font-size: 15px;
            }
        }
        @media (min-width: 1200px){
            #tab1,
            #tab2,
            #tab3,
            #tab4,
            #tab5{
                font-size: 16px;
            }
            #tab3 h4{
                font-size: 25px;
            }
            #tab3 img{
                width: 60px;
            }
            .badge,
            .ejercicio-evaluado{
                font-size: 14px;
            }
            .ejercicio-calificacion img{
                height: 20px;
            }
            .tarjeta-ejercicio{
                font-size: 18px;
                padding: 10px 25px;
            }
            #img-calificacion{
                height: 140px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="btn-pref btn-group btn-group-justified btn-group-lg" style="margin-bottom: 1%;" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary btn-menu-first" href="#tab1" data-toggle="tab">
                        <span class="fa fa-briefcase" aria-hidden="true"></span>
                        <div class="titulo-xs">ENTREGA</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default btn-menu-first" href="#tab2" data-toggle="tab">
                        <span class="fa fa-check" aria-hidden="true"></span>
                        <div class="titulo-xs">FEEDBACK</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default btn-menu-last" onclick="window.history.back();" >
                        <span class="fa fa-arrow-left" aria-hidden="true"></span>
                        <div class="titulo-xs">ATRÁS</div>
                    </button>
                </div>
            </div>
        </div>
        <div style="margin-top: 1%;">
            <div class="tab-content">
                <div class="row tab-pane fade in active" id="tab1">
                    <input id="entregaPI" name="entrega" type="file" class="file-loading">
                </div>
                <div class="row tab-pane fade in" id="tab2"> </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $("#entregaPI").fileinput({
            uploadUrl: "/ciudadano/trabajo/proyecto_innovacion/entregarPI",
            uploadAsync: true,
            maxFileCount: 1,
            showBrowse: false,
            browseOnZoneClick: true,
            maxFileSize: 2000
        });
        $("#entregaPI").on('fileuploaded', function (event, data, previewId, index) {
            $('#modal-avisos2').click();
            mostrarCarga('Subiendo reto...');
            var response = data.response;
            data = jQuery.parseJSON(response);
            mostrarResultadoOperacion(data.message);
        });
        $('#entregaPI').on('fileselectnone', function (event) {
            $('#modal-avisos2').click();
            mostrarResultadoOperacion("Huh! No hay ficheros seleccionados.");
        });
        $(document).ready(function () {
            getEntregado();
            $(".btn-pref .btn").click(function () {
                $(".btn-pref .btn").removeClass("btn-primary").addClass("btn-default");
                $(this).removeClass("btn-default").addClass("btn-primary");
            });
            {% if info.message is defined or info.type is defined%} $('#box_modal_result').click();{% endif %}
        });
        function getEntregado() {
            ruta = '/ciudadano/trabajo/proyecto_innovacion/datosPI';
            $.get(ruta, function (datos) {
                data = jQuery.parseJSON(datos);
                console.log(data);
                if (data.estado === 'OK') {
                    if (!data.message.ENTREGADO) {
                        contenido = '<center><h2>NO SE HA REALIZADO NINGUNA ENTREGA</h2></center>';
                        $('#tab2').html(contenido);
                    } else {
                        $('#entregaPI').hide();
                        contenido = '<center><h2>PROYECTO DE INNOVACIÓN ENTREGADO</h2></center>';
                        $('#tab1').html(contenido);

                        if (!data.message.CALIFICADO) {
                            contenido = '<center><h2>AÚN NO SE HA CALIFICADO SU PROYECTO DE INNOVACIÓN</h2></center>';
                            $('#tab2').html(contenido);
                        } else {
                            contenido = '';
                            contenido += '<div class="col-lg-6 col-lg-offset-3">';
                            contenido += '<div class="row bordes border-radius">';
                            contenido += '<legend style="text-align: center;">' + data.message.TITULO + '</legend>';
                            contenido += '<center><img src="{{ asset('images/badges/') }}' + data.message.ICONO + '" id="img-calificacion"/></center>';
                            contenido += '<center><h1>' + data.message.TEXTO + '</h1></center>';
                            contenido += '</div>';
                            contenido += '</div>';
                            $('#tab2').html(contenido);
                        }
                    }
                } else {
                    contenido = '';
                    contenido += '<div class="col-lg-6 col-lg-offset-3">';
                    contenido += '<h2>'+data.message+'</h2>';
                    contenido += '</div>';
                    $('#tab1').html(contenido);
                }
            });
        }
        function mostrarCarga(texto) {
            $("#mensaje-texto").empty();
            contenido = '';
            contenido += '<div class="row" style="margin-top:2%;">';
            contenido += '  <center>';
            contenido += '      <i class="fa fa-spinner fa-spin"></i>' + texto;
            contenido += '  </center>';
            contenido += '</div>';
            $("#mensaje-texto").append(contenido);
        }
        function mostrarResultadoOperacion(resultado) {
            $("#mensaje-texto").empty();
            contenido = '';
            contenido += '<div class="row" style="margin-top:2%;">';
            contenido += '      ' + resultado;
            contenido += '</div>';
            contenido += '<div class="row" style="margin-top:2%;">';
            contenido += '  <div class="col-xs-3 col-xs-offset-4">';
            contenido += '      <button class="btn btn-primary btn-block" onclick="location.reload();"> ACEPTAR </button>';
            contenido += '  </div>';
            contenido += '</div>';
            $("#mensaje-texto").append(contenido);
        }
        function cerrarModal() {
            $('#modal-advice2').modal('toggle');
        }
    </script>
{% endblock %}