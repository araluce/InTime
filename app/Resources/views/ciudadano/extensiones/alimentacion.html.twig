{# empty Twig template #}

{% extends "base.html.twig" %}

{% block header %}
    {% include "ciudadano/header.html.twig" %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-6 menu menu-principal">
                <center><a href="/"><img alt="Logo" src="{{ asset('images/iconos/Alimentacion1.png') }}" /></a></center>
            </div>
        </div>
        <div class="row" style="margin-top: 5%">
            <div class="col-xs-6 menu contenedor-badge">
                <center>
                    <a href="/ciudadano/alimentacion/comida">
                        <img alt="Logo" src="{{ asset('images/iconos/Comida.png') }}" />
                        {% if MENSAJES_COMIDA is defined %}
                            {% if MENSAJES_COMIDA|length > 0%}
                                <span class="badge badge-alimentacion">
                                    {{ MENSAJES_COMIDA|length}}
                                </span>
                            {% endif %}
                        {% endif %}
                    </a>
                </center>
            </div>
            <div class="col-xs-6 menu contenedor-badge">
                <center>
                    <a href="/ciudadano/alimentacion/bebida">
                        <img alt="Logo" src="{{ asset('images/iconos/Bebida.png') }}" />
                        {% if MENSAJES_BEBIDA is defined %}
                            {% if MENSAJES_BEBIDA|length > 0%}
                                <span class="badge badge-alimentacion">
                                    {{ MENSAJES_BEBIDA|length}}
                                </span>
                            {% endif %}
                        {% endif %}
                    </a>
                </center>
            </div>
        </div>
    </div>
{% endblock %}