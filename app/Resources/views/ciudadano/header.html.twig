{% if info.message is defined or info.type is defined%}
    <button type="button" class="btn btn-info btn-lg"
            data-toggle="modal" data-target="#modal_result"
            style="display:none;" id="box_modal_result">Open Modal
    </button>
    <div id="error_general">
        <div id="modal_result" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content {% if info.type is defined %}{{ info.type }}{% endif %}">
                    <div class="modal-body" style="display: inline-table;">
                        {% if info.type is defined %}
                            {% if 'danger' in info.type %}
                                <img id="image" 
                                     src="{{ asset('images/generic/error.jpg') }}"
                                     class="img-rounded" width="200" height="200" />
                            {% else %}
                                <img id="image" 
                                     src="{{ asset('images/generic/success.jpg') }}"
                                     class="img-rounded" width="200" height="200" />
                            {% endif %}
                            <div class="col-sm-6" style="float: right">
                        {% else %}
                            <div class="col-sm-12" style="float: right">
                        {% endif %}
                            {% if info.message is defined%}
                                <p>{{ info.message }}</p>
                            {%endif%}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}