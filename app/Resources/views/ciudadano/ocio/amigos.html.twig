{% extends "base.html.twig" %}

{% block header %}
    {% include "ciudadano/header.html.twig" %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row" style="margin-bottom: 5%;">
            <div class="col-xs-4 menu menu-principal">
                <center><a href="/"><img alt="Logo" src="{{ asset('images/iconos/Ocio.png') }}" rel="external"/></a></center>
            </div>
        </div>
        <div class="row" style="margin-bottom: 5%;">
            <div class="col-xs-4 menu menu-principal">
                <center><a href="/ciudadano/ocio"><img alt="Logo" src="{{ asset('images/iconos/Amigos.png') }}" rel="external"/></a></center>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-2 col-md-offset-4 col-xs-offset-2 menu contenedor-badge">
                <center>
                    <a href="/ciudadano/ocio/amigos/chat">
                        <img alt="Logo" src="{{ asset('images/iconos/Chat.png') }}" rel="external"/>
                        {% if CHAT is defined %}
                            {% if CHAT > 0 %}
                                <span class="badge badge-aviso animated pulse">
                                    {{ CHAT }}
                                </span>
                            {% endif %}
                        {% endif %}
                    </a>
                </center>
            </div>
            <div class="col-xs-2 col-md-offset-0 col-xs-offset-2 menu">
                <center><a href="/ciudadano/ocio/amigos/fotos"><img alt="Logo" src="{{ asset('images/iconos/Fotos.png') }}" rel="external"/></a></center>
            </div>
        </div>
    </div>
{% endblock %}