{% block javascripts %}
    <script>

        $(document).ready(function () {
            getPhotos();
        {% if info.message is defined or info.type is defined%}
                $('#box_modal_result').click();
        {% endif %}
            });
            function getPhotos() {
                ruta = '/ciudadano/obtenerFotos';
                $.get(ruta, function (data, status) {
                    console.log(data);
                    if (data.estado === 'OK') {
                        var contenido = '';
                        $.each(data.fotos, function (k, v) {
                            contenido = '<div class="single-portfolio">';
                            contenido += '  <figure class="portfolio-item">';
                            contenido += '      <figcaption class="portfolio-details details-author">';
                            if (v.usuario.alias !== null) {
                                contenido += '      <h4>@' + v.usuario.alias + '</h4>';
                            } else {
                                contenido += '      <h4>ANONIMO</h4>';
                            }
                            contenido += '      </figcaption>';
                            contenido += '      <img class="img-responsive" src="{{ asset('images/users/') }}' + v.usuario.dni + '/galeria/' + v.imagen + '" alt="">';
                            contenido += '      <figcaption class="portfolio-details details-social">';
                            contenido += '          <span class="fa fa-thumbs-up like" onclick="reaccion(' + v.id + ', "1");">' + v.likes + '</span>';
                            contenido += '          <span class="fa fa-thumbs-down dislike" onclick="reaccion(' + v.id + ', "0");">' + v.dislikes + '</span>';
                            contenido += '      </figcaption>';
                            contenido += '  </figure>';
                            contenido += '</div>';
                            var loaded = false;
                            var img = document.createElement('img');
                            width_img = 0;
                            height_img = 0;

                            img.onload = function () {
                                loaded = true;
                            };
                            img.src = "{{ asset('images/users/') }}" + v.usuario.dni + "/galeria/" + v.imagen;

                            var wait = setInterval(function () {
                                if (loaded) {
                                    clearInterval(wait);
                                } else {
                                    console.log(img.naturalWidth, img.naturalHeight);
                                    width_img = img.naturalWidth;
                                    height_img = img.naturalHeight;
                                    /*
                                     alert('Imagen (' + img.src + '): ' + width_img + 'px x' + height_img + 'px');
                                     alert('columna1: ' + $('#columna1').height() + img.naturalHeight + 'px columna2: ' + $('#columna2').height() + img.naturalHeight + 'px');*/
                                }
                            }, 0);
                            if ($('#columna1').height() + height_img >= $('#columna2').height() + height_img) {
                                $('#columna2').append(contenido);
                            } else {
                                $('#columna1').append(contenido);
                            }

                        });
                    }
                });
            }
            $("#input-711").fileinput({
                uploadUrl: "/ciudadano/subirImagenAlbum",
                uploadAsync: true,
                maxFileCount: 2,
                showBrowse: false,
                browseOnZoneClick: true,
                allowedFileExtensions: ['jpg', 'png', 'gif'],
                allowedFileTypes: ['image'],
                maxFileSize: 2000
            });
            function reaccion(foto_id, like) {
                var url = '/ciudadano/ocio/amigos/fotos/like/' + foto_id + '/' + like;
                $.get(url, function (data) {
                    console.log(data);
                    if (data.estado === 'OK') {
                        location.reload();
                    }
                });
            }
    </script>
    <!--<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>-->
{% endblock %}
