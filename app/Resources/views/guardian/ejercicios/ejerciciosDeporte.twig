{% block javascripts %}
    <script>
        function publicarDeporte() {
            var modalidad = $('#ejercicio_modalidad').val()
            var velocidad = parseFloat($("#velocidad").val());
            var horas = parseInt($("#duracion_horas").val());
            var minutos = parseInt($("#duracion_minutos").val());
            var segundos = parseInt($("#duracion_segundos").val());
            tiempo = ((horas * 60) + minutos) * 60 + segundos;
            if (modalidad === '0'){
                alert("Seleccione una modalidad");
            }else if (isNaN(velocidad)) {
                alert("Formato incorrecto para velocidad. Ej: 2,4");
            } else if (velocidad <= 0.00) {
                alert('La velocidad debe ser mayor a cero');
            } else if (tiempo <= 0) {
                alert('La sesi칩n debe durar m치s de un segundo');
            } else {
                ruta = '/guardian/ejercicios/deporte/publicar';
                datos = {
                    'MODALIDAD': modalidad,
                    'VELOCIDAD': velocidad,
                    'DURACION': tiempo
                };
                $.post(ruta, datos, function (data, status) {
                    alert(data.message);
                    location.reload();
                });
            }
        }
        $(document).ready(function () {
            $(".btn-pref .btn").click(function () {
                $(".btn-pref .btn").removeClass("btn-primary").addClass("btn-default");
                $(this).removeClass("btn-default").addClass("btn-primary");
