{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Oregano" rel="stylesheet">
    <style>
        @font-face {
            font-family: "Kimberley";
            src: url("{{ asset('font/digital-7.ttf') }}");
        }
        #index-logo-app img{
            margin-bottom: 4%;
        }
        .index-frase{
            font-family: 'Oregano', cursive;
            text-align: center;
        }
        .index-autor{
            font-family: 'Oregano', cursive;
            text-align: right;
        }
        .no-padding{
            padding-left: 0px;
            padding-right: 0px;
        }
        .help-block{
            font-family: 'Isocpeur
                }
                .login-form{
                font-family: 'Kimberley
        }
        .btn-index{
            padding: 5px 15px;
        }
        .btn-index:hover,
        .btn-index:focus{
            color: #FFFFFF;
            background-color:#000000;
        }


        .titulo-xs{
            display: block;
        }
        .separador-tweets{
            border-top: 2px solid #000000;
        }
        .tweet-perfil{
            padding-left: 5%; 
            padding-top: 1%;
        }
        .tweet-perfil img{
            width: 146px;
            height: 146px;
        }
        .tweet-perfil p{
            font-size: 25px; 
            color: #8899A6;
        }
        .tweet-cuerpo{
            padding-left: 5%;
        }
        .tweet-cuerpo p{
            font-size: 65px; 
            line-height: 40px; 
            font-weight: 400;
        }
        .div-tweet-folders-mvl{
            display: block;
        }
        .div-tweet-folders-comp{
            display: none;
        }
        .btn-group img{
            height: 70px;
        }
        .panel-btn-seguir button{
            border-width: 0px;
        }
        .panel-btn-seguir button img{
            height: 100px;
        }
        .titulo-xs{
            font-size: 20px;
        }
        .input-group-btn .btn{
            border-top-right-radius: 15px;
            border-bottom-right-radius: 15px;
            border-left-width: 0px;
        }
        .panel-seguir{
            margin-top: 1%;
        }
        select{
            -webkit-border-radius: 15px;
            -moz-border-radius: 15px;
            border-radius: 15px;
        }
        .panel-btn-seguir div{
            display: table-cell;
            float: none;
            /*width: 1%;*/
        }
        .button-tweet-panel{
            border-bottom: 2px #000000 solid;
        }
        .button-tweet-panel img{
            width: 100%;
        }
        #img-compartir{
            width: 30%;
        }
        .btn-group-tweet img{
            height: 140px;
            width: auto;
        }
        .compartir-alias{
            font-size: 40px;
            margin-right: 30px;
        }
